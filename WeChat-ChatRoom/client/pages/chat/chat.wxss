/* pages/chat/chat.wxss */

.chat-page {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-bottom: 20%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.setting-page {
  margin-top: 40rpx;
  margin-left: 90rpx;
  margin-right: 80rpx;
}

.group-title {
  font-size: 46rpx;
  font-weight: bold;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.group-item {
  font-size: 40rpx;
  margin-left: 30rpx;
}

.warning {
  color: red;
  font-size: 26rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.input-color {
  margin-left: 100rpx;
}

.chat-container {
  flex: 1;
  text-align: center;
  overflow-y: auto;
}

.system-message {
  background: #cecece;
  color: white;
  display: inline-block;
  border-radius: 10rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  margin: 30rpx 0 10rpx;
  padding: 8rpx 15rpx;
}

.message {
  display: flex;
  margin: 38rpx 20rpx 0;
  text-align: left;
}

.user-message {
  flex-direction: row-reverse;
}

.other-message {
  flex-direction: row;
}

.head {
  border-radius: 50%;
  height: 90rpx;
  width: 90rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.nickname {
  color: #737373;
  font-size: 24rpx;
}

.content {
  display: flex;
  position: relative;
  letter-spacing: 3rpx;
  line-height: 50rpx;
  margin-top: -30rpx;
  left: 63px;
  width: 65%;
  overflow: hidden;
  flex-wrap: warp;
  white-space: pre-wrap;
  word-break: break-all;
}

.text {
  border-radius: 20rpx;
  padding: 16rpx;
  text-align: left;
}

.input-panel {
  background: white;
  position: fixed;
  bottom: 2rpx;
  width: 100%;
}

.setting-icon {
  height: 44rpx;
  width: 44rpx;
}

.free-btn-bordernone::after {
  border: none;
}

.send-input {
  flex: 1;
  height: 80rpx;
  background: white;
  box-sizing: border-box;
  position: relative;
  width: 64%;
  display: inline-block;
}

.send-button {
  background: white;
  color: #01b0f1;
  display: inline-block;
  position: relative;
  height: 80rpx;
  width: 18%;
  font-size: 38rpx;
  bottom: -3rpx;
}
