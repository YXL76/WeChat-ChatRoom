/* pages/chat/chat.wxss */

.chat-page {
  background: #f2f3f5;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  padding-bottom: 20%;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.chat-container {
  flex: 1;
  text-align: center;
  overflow-y: auto;
}

.system-message {
  background: #cecece;
  color: white;
  display: inline-block;
  border-radius: 10rpx;
  font-size: 26rpx;
  line-height: 26rpx;
  margin: 30rpx 0 10rpx;
  padding: 8rpx 15rpx;
}

.message {
  display: flex;
  margin: 38rpx 20rpx 0;
  text-align: left;
}

.user-message {
  flex-direction: row-reverse;
}

.other-message {
  flex-direction: row;
}

.head {
  border-radius: 50%;
  height: 90rpx;
  width: 90rpx;
  margin-right: 10rpx;
  vertical-align: middle;
}

.nickname {
  color: #737373;
  font-size: 24rpx;
}

.content {
  border-radius: 20rpx;
  font-size: 32rpx;
  letter-spacing: 3rpx;
  line-height: 50rpx;
  margin-top: 50rpx;
  max-width: 65%;
  padding: 16rpx;
  word-break: break-all;
}

.user-content {
  background-color: #0188fb;
  color: white;
}

.other-content {
  background-color: white;
  color: black;
}

.input-panel {
  background: white;
  position: fixed;
  bottom: 2rpx;
  width: 100%;
}

.free-btn-bordernone::after {
  border: none;
}

.send-input {
  flex: 1;
  height: 80rpx;
  background: white;
  box-sizing: border-box;
  position: relative;
  width: 82%;
  display: inline-block;
}

.send-button {
  background: white;
  color: #01b0f1;
  display: inline-block;
  position: relative;
  height: 80rpx;
  width: 18%;
  font-size: 36rpx;
  bottom: -3rpx;
}
