{
  "name": "wechat-chatroom",
  "version": "1.0.0",
  "private": true,
  "browserslist": [
    "ios >= 9",
    "chrome >= 47"
  ],
  "scripts": {
    "build": "webpack --mode production --progress",
    "build:dev": "webpack --progress",
    "build:prod": "yarn generate:css && yarn build",
    "generate:css": "postcss src/tailwind.css -o src/app.css --config config",
    "lint": "eslint --ext .js,.mpx .",
    "server": "node src/server.js",
    "watch": "webpack -w -d --progress",
    "watch:prod": "webpack --mode production -w -d --progress"
  },
  "author": "YXL <chenxin.lan.76@gmail.com>",
  "dependencies": {
    "@mpxjs/core": "2.6.44",
    "@vant/weapp": "1.6.4",
    "vue": "2.6.12",
    "vue-i18n": "8.22.3",
    "ws": "7.4.6"
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/plugin-transform-runtime": "7.12.10",
    "@babel/preset-env": "7.12.11",
    "@babel/runtime-corejs3": "7.12.5",
    "@mpxjs/webpack-plugin": "2.6.44",
    "@types/copy-webpack-plugin": "6.4.0",
    "@types/terser-webpack-plugin": "4.2.0",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "autoprefixer": "10.2.1",
    "babel-loader": "8.2.2",
    "copy-webpack-plugin": "6.4.1",
    "css-loader": "0.28.11",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-html": "6.1.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "license-checker": "25.0.1",
    "miniprogram-api-typings": "3.2.1",
    "postcss": "8.4.31",
    "postcss-cli": "8.3.1",
    "postcss-css-variables": "0.17.0",
    "postcss-import": "14.0.0",
    "prettier": "2.2.1",
    "tailwindcss": "2.0.2",
    "terser-webpack-plugin": "4.2.3",
